<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:macros="sap.fe.macros"
    xmlns:html="http://www.w3.org/1999/xhtml"
    controllerName="appiuimodule.controllers.Overview">
    <Page
        id="Overview"
        title="{i18n>OverviewTitle}">
        <customHeader>
            <core:Fragment fragmentName="appiuimodule.views.Header" type="XML" />
        </customHeader>
        <content class="sapUiSmallMarginBottom sapUiMediumMarginBegin sapUiMediumMarginEnd">

            <!-- Customers Table -->
            <Table
                id="customersTable"
                items="{ path: 'customers>/value' }"
                class="sapUiResponsiveMargin"
                width="auto">
                <headerToolbar>
                    <Toolbar>
                        <Title text="{i18n>customersListTitle}" />
                        <ToolbarSpacer />
                        <SearchField
                            width="50%"
                            placeholder="{i18n>searchCustomersPlaceholder}"
                            search=".onFilterCustomers" />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column
                        minScreenWidth="Small"
                        width="5em">
                        <HBox alignItems="Center">
                            <Text text="{i18n>customerIdColumn}" />
                            <core:Icon
                                src="sap-icon://sort"
                                press=".onSortCustomerId"
                                class="sapUiTinyMarginBegin sortIcon" />
                        </HBox>
                    </Column>
                    <Column>
                        <Text text="{i18n>companyNameColumn}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>contactNameColumn}" />
                    </Column>
                    <Column minScreenWidth="Small">
                        <HBox alignItems="Center">
                            <Text text="{i18n>countryColumn}" />
                            <core:Icon
                                src="sap-icon://sort"
                                press=".onSortCountry"
                                class="sapUiTinyMarginBegin sortIcon" />
                        </HBox>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        type="Navigation"
                        press=".onCustomerPress">
                        <cells>
                            <Text text="{customers>CustomerID}" />
                            <Text text="{customers>CompanyName}" />
                            <Text text="{customers>ContactName}" />
                            <Text text="{customers>Country}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>

            <!-- items="{
                        path : 'tasks>/tasks',
                        sorter : {
                            path : 'type',
                            group : true
                        }
                    }" -->
            <ScrollContainer height="400px" vertical="true" horizontal="false" class="sapUiResponsiveMargin">
                <Table
                    id="ordersTable"
                    items="{ path: 'orders>/value' }"
                    width="auto">
                <headerToolbar>
                    <Toolbar>
                        <Title text="{i18n>orderListTitle}" />
                        <SearchField
                            width="40%"
                            placeholder="{i18n>searchOrdersPlaceholder}"
                            search=".onFilterTasks" />
                        <ToolbarSpacer />
                        <Select
                            selectedKey="All"
                            width="8em"
                            change=".onStatusFilterChange"
                            class="sapUiTinyMarginEnd">
                            <core:Item key="All" text="{i18n>allStatusFilter}" />
                            <core:Item key="Pending" text="{i18n>pendingStatusFilter}" />
                            <core:Item key="Shipped" text="{i18n>shippedStatusFilter}" />
                        </Select>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column
                        minScreenWidth="Small"
                        width="5em">
                        <Text text="{i18n>orderIdColumn}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>taskTypeColumn}" />
                    </Column>
                    <Column>
                        <HBox alignItems="Center">
                            <Text text="{i18n>customerIdColumn}" />
                            <core:Icon
                                src="sap-icon://sort"
                                press=".onSortCustomerIdOrders"
                                class="sapUiTinyMarginBegin sortIcon" />
                        </HBox>
                    </Column>
                    <Column minScreenWidth="Small">
                        <Text text="{i18n>countryColumn}" />
                    </Column>
                    <Column minScreenWidth="Small">
                        <HBox alignItems="Center">
                            <Text text="{i18n>orderDateColumn}" />
                            <core:Icon
                                src="sap-icon://sort"
                                press=".onSortOrderDate"
                                class="sapUiTinyMarginBegin sortIcon" />
                        </HBox>
                    </Column>
                    <Column minScreenWidth="Small">
                        <Text text="{i18n>shippedDateColumn}" />
                    </Column>
                    <Column minScreenWidth="Small">
                        <Text text="{i18n>statusColumn}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        type="Navigation"
                        press=".onPress">
                        <cells>
                            <Text text="{orders>OrderID}" />
                            <Text text="Order" />
                            <Text text="{orders>CustomerID}" />
                            <Text text="{orders>ShipCountry}" />
                            <Text text="{path: 'orders>OrderDate', formatter: '.formatDate'}" />
                            <Text text="{path: 'orders>ShippedDate', formatter: '.formatDate'}" />
                            <Text text="{orders>Status}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
            </ScrollContainer>

            <!-- Invoices Table -->
            <Table
                id="invoicesTable"
                items="{ path: 'invoices>/value' }"
                class="sapUiResponsiveMargin"
                width="auto">
                <headerToolbar>
                    <Toolbar>
                        <Title text="{i18n>invoicesListTitle}" />
                        <ToolbarSpacer />
                        <SearchField
                            width="50%"
                            placeholder="{i18n>searchInvoicesPlaceholder}"
                            search=".onFilterInvoices" />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column
                        minScreenWidth="Small"
                        width="5em">
                        <Text text="{i18n>orderIdColumn}" />
                    </Column>
                    <Column>
                        <HBox alignItems="Center">
                            <Text text="{i18n>productNameColumn}" />
                            <core:Icon
                                src="sap-icon://sort"
                                press=".onSortProductName"
                                class="sapUiTinyMarginBegin sortIcon" />
                        </HBox>
                    </Column>
                    <Column>
                        <HBox alignItems="Center">
                            <Text text="{i18n>customerColumn}" />
                            <core:Icon
                                src="sap-icon://sort"
                                press=".onSortCustomerName"
                                class="sapUiTinyMarginBegin sortIcon" />
                        </HBox>
                    </Column>
                    <Column minScreenWidth="Small">
                        <Text text="{i18n>orderDateColumn}" />
                    </Column>
                    <Column minScreenWidth="Small">
                        <Text text="{i18n>statusColumn}" />
                    </Column>
                    <Column minScreenWidth="Small">
                        <Text text="{i18n>priceColumn}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        type="Navigation"
                        press=".onInvoicePress">
                        <cells>
                            <Text text="{invoices>OrderID}" />
                            <Text text="{invoices>ProductName}" />
                            <Text text="{invoices>CustomerName}" />
                            <Text text="{path: 'invoices>OrderDate', formatter: '.formatDate'}" />
                            <Text text="Active" />
                            <Text text="{invoices>ExtendedPrice}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <footer>
            <core:Fragment fragmentName="appiuimodule.views.Footer" type="XML" />
        </footer>
    </Page>
</mvc:View>