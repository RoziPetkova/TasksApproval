<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:macros="sap.fe.macros"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:table="sap.ui.table"
    controllerName="appiuimodule.controllers.Overview">

    <f:DynamicPage
        id="OverviewDynamicPage">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <HBox>
                        <Button type="Transparent" icon="sap-icon://nav-back"
                            press=".onNavBack" />
                        <Title class="sapUiTinyMarginTop sapUiSmallMarginBegin"
                            text="{i18n>OverviewTitle}" />
                    </HBox>
                </f:heading>
                <f:actions>
                    <core:Fragment fragmentName="appiuimodule.views.HeaderButtons" type="XML" />
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>
        <f:content>
            <VBox renderType="Bare" class="sapUiResponsiveMargin">
                <!-- Customers Card with Fixed Height -->
                <VBox renderType="Bare">
                    <f:Card height="30rem" class="sapUiContentPadding">
                        <f:header>
                            <card:Header
                                title="{i18n>customersListTitle}"
                                subtitle="{i18n>customersSubtitle}">
                            </card:Header>
                        </f:header>
                        <f:content>
                            <VBox renderType="Bare" width="100%">
                                <VBox renderType="Bare" width="100%">
                                    <Toolbar style="Clear" width="100%">
                                        <ToolbarSpacer visible="{= !${viewModel>/isMobile} }" />
                                        <SearchField
                                            width="{= ${viewModel>/isMobile} ? '100%' : '50%' }"
                                            placeholder="{i18n>searchCustomersPlaceholder}"
                                            search=".onFilterCustomers" />
                                    </Toolbar>
                                </VBox>

                                <VBox height="75%" renderType="Bare">
                                    <ScrollContainer height="100%" vertical="true"
                                        horizontal="false">
                                        <Table
                                            id="customersTable"
                                            items="{ path: 'customers>/value' }"
                                            width="100%"
                                            showNoData="false"
                                            mode="None"
                                            busyIndicatorDelay="0">
                                            <columns>
                                                <Column
                                                    width="7em">
                                                    <HBox alignItems="Center">
                                                        <Text text="{i18n>customerIdColumn}" />
                                                        <core:Icon
                                                            src="sap-icon://sort"
                                                            press=".onSortCustomerId"
                                                            class="sapUiTinyMarginBegin sortIcon" />
                                                    </HBox>
                                                </Column>
                                                <Column>
                                                    <Text text="{i18n>companyNameColumn}" />
                                                </Column>
                                                <Column>
                                                    <Text text="{i18n>contactNameColumn}" />
                                                </Column>
                                                <Column minScreenWidth="Small" demandPopin="true">
                                                    <HBox alignItems="Center">
                                                        <Text text="{i18n>countryColumn}" />
                                                        <core:Icon
                                                            src="sap-icon://sort"
                                                            press=".onSortCountry"
                                                            class="sapUiTinyMarginBegin sortIcon" />
                                                    </HBox>
                                                </Column>
                                            </columns>
                                            <items>
                                                <ColumnListItem
                                                    type="Navigation"
                                                    press=".onCustomerPress">
                                                    <cells>
                                                        <Text text="{customers>CustomerID}" />
                                                        <Text text="{customers>CompanyName}" />
                                                        <Text text="{customers>ContactName}" />
                                                        <Text text="{customers>Country}" />
                                                    </cells>
                                                </ColumnListItem>
                                            </items>
                                        </Table>
                                    </ScrollContainer>
                                </VBox>
                                <!-- Load More Button at Bottom -->
                                <HBox justifyContent="End">
                                    <Button
                                        id="loadMoreCustomersBtn"
                                        text="{i18n>loadMoreCustomersButton}"
                                        type="Transparent"
                                        press=".onLoadMoreCustomers"
                                        enabled="{customers>/hasMore}"
                                        class="sapUiSmallMarginTop sapUiSmallMarginEnd" />
                                </HBox>
                            </VBox>
                        </f:content>
                    </f:Card>
                </VBox>

                <!-- items="{
                            path : 'tasks>/tasks',
                            sorter : {
                                path : 'type',
                                group : true
                            }
                        }" -->
                <!-- Orders Card -->
                <VBox renderType="Bare" class="sapUiLargeMarginTop">
                    <f:Card height="30rem" class="sapUiContentPadding">
                        <f:header>
                            <card:Header
                                title="{i18n>orderListTitle}"
                                subtitle="{i18n>ordersSubtitle}">
                            </card:Header>
                        </f:header>
                        <f:content>
                            <VBox renderType="Bare">
                                <HBox renderType="Bare" width="100%">
                                    <OverflowToolbar style="Clear" width="100%">
                                        <ToolbarSpacer visible="{= !${viewModel>/isMobile} }" />
                                        <SearchField
                                            placeholder="{i18n>searchOrdersPlaceholder}"
                                            search=".onFilterOrders"
                                            width="{= ${viewModel>/isMobile} ? '55%' : '40%' }" />
                                        <Select
                                            selectedKey="All"
                                            change=".onStatusFilterChange"
                                            class="sapUiTinyMarginBegin"
                                            width="{= ${viewModel>/isMobile} ? '44%' : '15%' }">
                                            <core:Item key="All" text="{i18n>allStatusFilter}" />
                                            <core:Item key="Pending"
                                                text="{i18n>pendingStatusFilter}" />
                                            <core:Item key="Shipped"
                                                text="{i18n>shippedStatusFilter}" />
                                        </Select>
                                    </OverflowToolbar>
                                </HBox>

                                <VBox renderType="Bare" height="80%">
                                    <!-- Single Table with Programmatic Sticky Headers -->
                                    <ScrollContainer height="100%" vertical="true"
                                        horizontal="false">
                                        <Table
                                            id="ordersTable"
                                            items="{ path: 'orders>/value' }"
                                            width="100%"
                                            showNoData="false"
                                            mode="None"
                                            busyIndicatorDelay="0">
                                            <columns>
                                                <Column
                                                    width="5em">
                                                    <Text text="{i18n>orderIdColumn}" />
                                                </Column>
                                                <Column minScreenWidth="Small">
                                                    <Text text="{i18n>taskTypeColumn}" />
                                                </Column>
                                                <Column demandPopin="true" minScreenWidth="Small">
                                                    <HBox alignItems="Center">
                                                        <Text text="{i18n>customerIdColumn}" />
                                                        <core:Icon
                                                            src="sap-icon://sort"
                                                            press=".onSortCustomerIdOrders"
                                                            class="sapUiTinyMarginBegin sortIcon" />
                                                    </HBox>
                                                </Column>
                                                <Column demandPopin="true" minScreenWidth="Small">
                                                    <Text text="{i18n>countryColumn}" />
                                                </Column>
                                                <Column>
                                                    <HBox alignItems="Center">
                                                        <Text text="{i18n>orderDateColumn}" />
                                                        <core:Icon
                                                            src="sap-icon://sort"
                                                            press=".onSortOrderDate"
                                                            class="sapUiTinyMarginBegin sortIcon" />
                                                    </HBox>
                                                </Column>
                                                <Column>
                                                    <Text text="{i18n>shippedDateColumn}" />
                                                </Column>
                                                <Column>
                                                    <HBox alignItems="Center">
                                                        <Text text="{i18n>statusColumn}" />
                                                        <core:Icon
                                                            src="sap-icon://sort"
                                                            press=".onSortStatus"
                                                            class="sapUiTinyMarginBegin sortIcon" />
                                                    </HBox>
                                                </Column>
                                            </columns>
                                            <items>
                                                <ColumnListItem
                                                    type="Navigation"
                                                    press=".onOrderPress">
                                                    <cells>
                                                        <Text text="{orders>OrderID}" />
                                                        <Text text="{i18n>orderTaskTypeValue}" />
                                                        <Text text="{orders>CustomerID}" />
                                                        <Text text="{orders>ShipCountry}" />
                                                        <Text
                                                            text="{path: 'orders>OrderDate', formatter: '.formatDate'}" />
                                                        <Text
                                                            text="{
                                                    parts: ['orders>ShippedDate', 'orders>Status'],
                                                    formatter: '.formatShippedDate'
                                                }" />
                                                        <ObjectStatus
                                                            text="{orders>Status}"
                                                            state="{path: 'orders>Status', formatter: '.formatStatusState'}" />
                                                    </cells>
                                                </ColumnListItem>
                                            </items>
                                        </Table>
                                    </ScrollContainer>
                                </VBox>
                            </VBox>
                        </f:content>
                    </f:Card>
                </VBox>

                <!-- Invoices Card with Fixed Height -->
                <VBox renderType="Bare" class="sapUiLargeMarginTop">
                    <f:Card height="30rem" class="sapUiContentPadding">
                        <f:header>
                            <card:Header
                                title="{i18n>invoicesListTitle}"
                                subtitle="{i18n>invoicesSubtitle}">
                            </card:Header>
                        </f:header>
                        <f:content>
                            <VBox renderType="Bare" width="100%">
                                <VBox renderType="Bare" width="100%">
                                    <Toolbar style="Clear" width="100%">
                                        <ToolbarSpacer visible="{= !${viewModel>/isMobile} }" />
                                        <SearchField
                                            width="{= ${viewModel>/isMobile} ? '100%' : '50%' }"
                                            placeholder="{i18n>searchInvoicesPlaceholder}"
                                            search=".onFilterInvoices" />
                                    </Toolbar>
                                </VBox>

                                <VBox renderType="Bare" height="75%">
                                    <!-- Single Table with Programmatic Sticky Headers -->
                                    <ScrollContainer height="100%" vertical="true"
                                        horizontal="false">
                                        <Table
                                            id="invoicesTable"
                                            items="{ path: 'invoices>/value' }"
                                            width="100%"
                                            showNoData="false"
                                            mode="None"
                                            busyIndicatorDelay="0">
                                            <columns>
                                                <Column width="5em">
                                                    <Text text="{i18n>orderIdColumn}" />
                                                </Column>
                                                <Column demandPopin="true">
                                                    <HBox alignItems="Center">
                                                        <Text text="{i18n>productNameColumn}" />
                                                        <core:Icon
                                                            src="sap-icon://sort"
                                                            press=".onSortProductName"
                                                            class="sapUiTinyMarginBegin sortIcon" />
                                                    </HBox>
                                                </Column>
                                                <Column demandPopin="true">
                                                    <HBox alignItems="Center">
                                                        <Text text="{i18n>customerColumn}" />
                                                        <core:Icon
                                                            src="sap-icon://sort"
                                                            press=".onSortCustomerName"
                                                            class="sapUiTinyMarginBegin sortIcon" />
                                                    </HBox>
                                                </Column>
                                                <Column demandPopin="true" minScreenWidth="Small">
                                                    <Text text="{i18n>orderDateColumn}" />
                                                </Column>
                                                <Column demandPopin="true" minScreenWidth="Small">
                                                    <Text text="{i18n>statusColumn}" />
                                                </Column>
                                                <Column >
                                                    <Text text="{i18n>priceColumn}" />
                                                </Column>
                                            </columns>
                                            <items>
                                                <ColumnListItem
                                                    type="Navigation"
                                                    press=".onInvoicePress">
                                                    <cells>
                                                        <Text text="{invoices>OrderID}" />
                                                        <Text text="{invoices>ProductName}" />
                                                        <Text text="{invoices>CustomerName}" />
                                                        <Text
                                                            text="{path: 'invoices>OrderDate', formatter: '.formatDate'}" />
                                                        <Text text="{i18n>activeStatusValue}" />
                                                        <Text text="{invoices>ExtendedPrice}" />
                                                    </cells>
                                                </ColumnListItem>
                                            </items>
                                        </Table>
                                    </ScrollContainer>
                                </VBox>

                                <!-- Load More Button at Bottom -->
                                <HBox justifyContent="End">
                                    <Button
                                        id="loadMoreInvoicesBtn"
                                        text="{i18n>loadMoreInvoicesButton}"
                                        type="Transparent"
                                        press=".onLoadMoreInvoices"
                                        enabled="{invoices>/hasMore}"
                                        class="sapUiSmallMarginTop sapUiSmallMarginEnd" />
                                </HBox>
                            </VBox>
                        </f:content>
                    </f:Card>
                </VBox>
            </VBox>
        </f:content>
        <f:footer>
            <core:Fragment fragmentName="appiuimodule.views.Footer" type="XML" />
        </f:footer>
    </f:DynamicPage>
</mvc:View>