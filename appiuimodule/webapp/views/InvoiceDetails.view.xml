<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:macros="sap.fe.macros"
    xmlns:html="http://www.w3.org/1999/xhtml"
    controllerName="appiuimodule.controllers.InvoiceDetails">
    <Page
        id="InvoiceDetails"
        title="{i18n>invoiceDetailsTitle}"
        showNavButton="true"
        navButtonPress=".onNavBack">
        <customHeader>
            <core:Fragment fragmentName="appiuimodule.views.Header" type="XML" />
        </customHeader>
        <content class="sapUiSmallMarginBottom sapUiMediumMarginBegin sapUiMediumMarginEnd">
            
            <!-- Invoice Details Table -->
            <Table
                id="invoiceTable"
                items="{ path: 'invoiceModel>/invoiceDetails' }"
                class="sapUiResponsiveMargin"
                width="auto">
                <headerToolbar>
                    <Toolbar>
                        <Title text="{i18n>invoiceDetailsTitle}" />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column width="8em">
                        <Text text="{i18n>fieldColumn}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>valueColumn}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{invoiceModel>label}" />
                            <Text text="{invoiceModel>value}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>

        </content>
        <footer>
            <core:Fragment fragmentName="appiuimodule.views.Footer" type="XML" />
        </footer>
    </Page>
</mvc:View>