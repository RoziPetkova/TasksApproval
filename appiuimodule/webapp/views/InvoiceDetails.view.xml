<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:macros="sap.fe.macros"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:layout="sap.ui.layout"
    controllerName="appiuimodule.controllers.InvoiceDetails">

    <f:DynamicPage
        id="InvoiceDetailsDynamicPage">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <HBox>
                        <Button type="Transparent" icon="sap-icon://nav-back"
                            press=".onNavBack" />
                        <Title class="sapUiTinyMarginTop sapUiSmallMarginBegin"
                            text="{i18n>invoiceDetailsTitle}" />
                    </HBox>
                </f:heading>
                <f:actions>
                    <core:Fragment fragmentName="appiuimodule.views.HeaderButtons" type="XML" />
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader
                pinnable="true">
                <f:content>
                    <VBox width="100%">
                        <HBox justifyContent="End" class="sapUiSmallMarginBottom">
                            <core:Fragment
                                fragmentName="appiuimodule.views.CustomerDetailsButton"
                                type="XML" />
                        </HBox>
                        <layout:HorizontalLayout allowWrapping="true" class="sapUiLargeMarginBegin">
                            <!-- Order Information -->
                            <layout:VerticalLayout class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                                <Label text="{i18n>generalInformationLabel}"
                                    class="sapUiTinyMarginBottom" />
                                <VBox>
                                    <ObjectAttribute title="{i18n>orderIdColumn}"
                                        text="{invoiceModel>/invoiceDetails/0/value}" />
                                    <ObjectAttribute title="{i18n>productNameColumn}"
                                        text="{invoiceModel>/invoiceDetails/1/value}" />
                                    <ObjectAttribute title="{i18n>customerColumn}"
                                        text="{invoiceModel>/invoiceDetails/3/value}" />
                                    <ObjectAttribute title="{i18n>orderDateColumn}"
                                        text="{invoiceModel>/invoiceDetails/10/value}" />
                                </VBox>
                            </layout:VerticalLayout>

                            <!-- Pricing Information -->
                            <layout:VerticalLayout class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                                <Label text="Pricing Information"
                                    class="sapUiTinyMarginBottom" />
                                <VBox>
                                    <ObjectAttribute title="{i18n>quantityLabel}"
                                        text="{invoiceModel>/invoiceDetails/4/value}" />
                                    <ObjectAttribute title="{i18n>unitPriceLabel}"
                                        text="{invoiceModel>/invoiceDetails/5/value}" />
                                    <ObjectAttribute title="{i18n>discountLabel}"
                                        text="{invoiceModel>/invoiceDetails/6/value}" />
                                    <ObjectAttribute title="{i18n>extendedPriceLabel}"
                                        text="{invoiceModel>/invoiceDetails/7/value}" />
                                </VBox>
                            </layout:VerticalLayout>

                            <!-- Shipping Information -->
                            <layout:VerticalLayout class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                                <Label text="Shipping Information" class="sapUiTinyMarginBottom" />
                                <VBox>
                                    <ObjectAttribute title="{i18n>salespersonLabel}"
                                        text="{invoiceModel>/invoiceDetails/8/value}" />
                                    <ObjectAttribute title="{i18n>shipperNameLabel}"
                                        text="{invoiceModel>/invoiceDetails/9/value}" />
                                    <ObjectAttribute title="{i18n>freightLabel}"
                                        text="{invoiceModel>/invoiceDetails/11/value}" />
                                </VBox>
                            </layout:VerticalLayout>

                        </layout:HorizontalLayout>
                    </VBox>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox class="sapUiResponsiveMargin">
                <!-- Products Card with Fixed Height -->
                <VBox renderType="Bare">
                    <f:Card class="sapUiContentPadding responsiveCard">
                        <f:header>
                            <card:Header
                                title="{i18n>productsInOrderTitle}"
                                subtitle="{i18n>productsInCurrentInvoiceTitle}">
                            </card:Header>
                        </f:header>
                        <f:content>
                            <VBox renderType="Bare" width="100%">
                                <!-- Single Table with Programmatic Sticky Headers -->
                                <ScrollContainer height="90%" vertical="true" horizontal="false">
                                    <Table
                                        id="productsTable"
                                        items="{ path: 'odataModel>/Invoices' }"
                                        showNoData="false"
                                        mode="None"
                                        busyIndicatorDelay="0">
                                        <columns>
                                            <Column width="12em">
                                                <Text text="{i18n>productNameColumn}" />
                                            </Column>
                                            <Column width="6em">
                                                <Text text="{i18n>quantityLabel}" />
                                            </Column>
                                            <Column width="8em">
                                                <Text text="{i18n>unitPriceLabel}" />
                                            </Column>
                                            <Column width="6em">
                                                <Text text="{i18n>discountLabel}" />
                                            </Column>
                                            <Column width="8em">
                                                <Text text="{i18n>extendedPriceLabel}" />
                                            </Column>
                                        </columns>
                                        <items>
                                            <ColumnListItem>
                                                <cells>
                                                    <Text text="{odataModel>ProductName}" />
                                                    <Text text="{odataModel>Quantity}" />
                                                    <Text
                                                        text="{path: 'odataModel>UnitPrice', formatter: '.formatter.formatCurrency'}" />
                                                    <Text
                                                        text="{path: 'odataModel>Discount', formatter: '.formatDiscount'}" />
                                                    <Text
                                                        text="{path: 'odataModel>ExtendedPrice', formatter: '.formatter.formatCurrency'}" />
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </ScrollContainer>
                            </VBox>
                        </f:content>
                    </f:Card>
                </VBox>

            </VBox>

        </f:content>
        <f:footer>
            <core:Fragment fragmentName="appiuimodule.views.Footer" type="XML" />
        </f:footer>
    </f:DynamicPage>
</mvc:View>