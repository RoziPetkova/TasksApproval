<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:macros="sap.fe.macros"
    xmlns:html="http://www.w3.org/1999/xhtml"
    controllerName="appiuimodule.controllers.ReviewInvoices">

    <f:DynamicPage
        id="ReviewInvoicesDynamicPage">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <HBox>
                        <Button type="Transparent" icon="sap-icon://nav-back"
                            press=".onNavBack" />
                        <Title class="sapUiTinyMarginTop sapUiSmallMarginBegin"
                            text="{i18n>reviewInvoicesTitle}" />
                    </HBox>
                </f:heading>
                <f:actions>
                    <core:Fragment fragmentName="appiuimodule.views.HeaderButtons" type="XML" />
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>
        <f:content>

            <!-- Invoices Review Card with Larger Height -->
            <VBox class="sapUiResponsiveMargin sapUiLargeMarginTop" renderType="Bare">
                <f:Card height="35rem" class="sapUiContentPadding">
                    <f:header>
                        <card:Header
                            title="{i18n>reviewInvoicesTitle}"
                            subtitle="{i18n>invoicesSubtitle}">
                        </card:Header>
                    </f:header>
                    <f:content>
                        <VBox renderType="Bare" width="100%">
                            <VBox renderType="Bare" width="100%">
                                <Toolbar style="Clear" width="100%">
                                    <ToolbarSpacer visible="{= !${viewModel>/isMobile} }" />
                                    <SearchField
                                        width="{= ${viewModel>/isMobile} ? '100%' : '50%' }"
                                        placeholder="{i18n>searchInvoicesPlaceholder}"
                                        search=".onFilterInvoices" />
                                </Toolbar>
                            </VBox>

                            <VBox renderType="Bare" height="85%">
                                <!-- Single Table with Programmatic Sticky Headers -->
                                <ScrollContainer height="100%" vertical="true"
                                    horizontal="false">
                                    <Table
                                        id="reviewInvoicesTable"
                                        items="{
                                                path: 'odataModel>/Invoices',
                                                parameters: {
                                                    $top: 10,
                                                    operationMode: 'Server'
                                                }
                                            }"
                                        width="100%"
                                        showNoData="false"
                                        mode="None"
                                        busyIndicatorDelay="0"
                                        growing="true"
                                        growingThreshold="10"
                                        growingTriggerText="{i18n>loadMoreInvoicesButton}">
                                        <columns>
                                            <Column width="7em">
                                                <customData>
                                                    <core:CustomData key="fieldPath" value="OrderID" />
                                                </customData>
                                                <Link text="{i18n>orderIdColumn}"
                                                    press=".onSortColumn" />
                                            </Column>
                                            <Column demandPopin="true">
                                                <customData>
                                                    <core:CustomData key="fieldPath" value="ProductName" />
                                                </customData>
                                                <Link text="{i18n>productNameColumn}"
                                                    press=".onSortColumn" />
                                            </Column>
                                            <Column demandPopin="true">
                                                <customData>
                                                    <core:CustomData key="fieldPath" value="CustomerName" />
                                                </customData>
                                                <Link text="{i18n>customerColumn}"
                                                    press=".onSortColumn" />
                                            </Column>
                                            <Column demandPopin="true" minScreenWidth="Small">
                                                <customData>
                                                    <core:CustomData key="fieldPath" value="OrderDate" />
                                                </customData>
                                                <Link text="{i18n>orderDateColumn}"
                                                    press=".onSortColumn" />
                                            </Column>
                                            <Column demandPopin="true" minScreenWidth="Small">
                                                <customData>
                                                    <core:CustomData key="fieldPath" value="Status" />
                                                </customData>
                                                <Link text="{i18n>statusColumn}"
                                                    press=".onSortColumn" />
                                            </Column>
                                            <Column>
                                                <customData>
                                                    <core:CustomData key="fieldPath" value="ExtendedPrice" />
                                                </customData>
                                                <Link text="{i18n>priceColumn}"
                                                    press=".onSortColumn" />
                                            </Column>
                                        </columns>
                                        <items>
                                            <ColumnListItem
                                                type="Navigation"
                                                press=".onInvoicePress">
                                                <cells>
                                                    <Text text="{odataModel>OrderID}" />
                                                    <Text text="{odataModel>ProductName}" />
                                                    <Text text="{odataModel>CustomerName}" />
                                                    <Text
                                                        text="{path: 'odataModel>OrderDate', formatter: '.formatDate'}" />
                                                    <Text text="{i18n>activeStatusValue}" />
                                                    <Text text="{invoices>ExtendedPrice}" />
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </ScrollContainer>
                            </VBox>

                        </VBox>
                    </f:content>
                </f:Card>
            </VBox>

        </f:content>
        <f:footer>
            <core:Fragment fragmentName="appiuimodule.views.Footer" type="XML" />
        </f:footer>
    </f:DynamicPage>
</mvc:View>