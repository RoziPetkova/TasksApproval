<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:macros="sap.fe.macros"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:layout="sap.ui.layout"
    controllerName="appiuimodule.controllers.CustomerDetails">

    <f:DynamicPage
        id="CustomerDetailsDynamicPage">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <HBox>
                        <Button type="Transparent" icon="sap-icon://nav-back"
                            press=".onNavBack" />
                        <Title class="sapUiTinyMarginTop sapUiSmallMarginBegin"
                            text="{odataModel>CompanyName}" />
                    </HBox>
                </f:heading>
                <f:expandedContent>
                    <Label class=" sapUiLargeMarginBegin" text="{odataModel>CustomerID}" />
                </f:expandedContent>
                <f:snappedContent>
                    <Label class=" sapUiLargeMarginBegin" text="{odataModel>CustomerID}" />
                </f:snappedContent>
                <f:actions>
                    <core:Fragment fragmentName="appiuimodule.views.HeaderButtons" type="XML" />
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader
                pinnable="true">
                <f:content>
                    <layout:HorizontalLayout allowWrapping="true" class="sapUiLargeMarginBegin">
                        <!-- General Information -->
                        <layout:VerticalLayout class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                            <Label text="{i18n>generalInformationLabel}"
                                class="sapUiTinyMarginBottom" />
                            <VBox>
                                <ObjectAttribute title="{i18n>customerIdColumn}"
                                    text="{odataModel>CustomerID}" />
                                <ObjectAttribute title="{i18n>companyNameColumn}"
                                    text="{odataModel>CompanyName}" />
                            </VBox>
                        </layout:VerticalLayout>

                        <!-- Contact Information -->
                        <layout:VerticalLayout class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                            <Label text="{i18n>contactInformationLabel}"
                                class="sapUiTinyMarginBottom" />
                            <VBox>
                                <ObjectAttribute title="{i18n>contactNameColumn}"
                                    text="{odataModel>ContactName}" />
                                <ObjectAttribute title="{i18n>contactTitleLabel}"
                                    text="{odataModel>ContactTitle}" />
                                <ObjectAttribute title="{i18n>phoneColumn}"
                                    text="{odataModel>Phone}" />
                                <ObjectAttribute title="{i18n>faxLabel}"
                                    text="{path: 'odataModel>Fax', formatter: '.formatFax'}" />
                            </VBox>
                        </layout:VerticalLayout>

                        <!-- Address Information -->
                        <layout:VerticalLayout class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                            <Label text="{i18n>addressLabel}" class="sapUiTinyMarginBottom" />
                            <VBox>
                                <ObjectAttribute title="Address" text="{odataModel>Address}" />
                                <ObjectAttribute title="City"
                                    text="{odataModel>City}, {path: 'odataModel>Region', formatter: '.formatRegion'}" />
                                <ObjectAttribute title="Postal Code"
                                    text="{odataModel>PostalCode}" />
                                <ObjectAttribute title="Country" text="{odataModel>Country}" />
                            </VBox>
                        </layout:VerticalLayout>

                    </layout:HorizontalLayout>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox class="sapUiResponsiveMargin">
                <!-- Customer Orders Card with Fixed Height -->
                <VBox renderType="Bare">
                    <f:Card class="sapUiContentPadding responsiveCard">
                        <f:header>
                            <card:Header
                                title="{i18n>customerOrdersTitle}"
                                subtitle="All orders from this customer">
                            </card:Header>
                        </f:header>
                        <f:content>
                            <VBox width="100%">
                                <!-- Orders table -->
                                <ScrollContainer height="90%" vertical="true" horizontal="false">
                                    <Table
                                        id="customerOrdersTable"
                                        items="{ path: 'customerOrders>/value' }"
                                        width="100%"
                                        showNoData="true"
                                        noDataText="No orders available"
                                        mode="None"
                                        busyIndicatorDelay="0">
                                        <columns>
                                            <Column width="5em">
                                                <customData>
                                                    <core:CustomData key="fieldPath" value="OrderID" />
                                                </customData>
                                                <Link text="{i18n>orderIdColumn}"
                                                    press=".onSortOrdersColumn" />
                                            </Column>
                                            <Column minScreenWidth="Small">
                                                <Text text="{i18n>taskTypeColumn}" />
                                            </Column>
                                            <Column minScreenWidth="Small">
                                                <customData>
                                                    <core:CustomData key="fieldPath" value="CustomerID" />
                                                </customData>
                                                <Link text="{i18n>customerIdColumn}"
                                                    press=".onSortOrdersColumn" />
                                            </Column>
                                            <Column demandPopin="true" minScreenWidth="Small">
                                                <customData>
                                                    <core:CustomData key="fieldPath" value="ShipCountry" />
                                                </customData>
                                                <Link text="{i18n>countryColumn}"
                                                    press=".onSortOrdersColumn" />
                                            </Column>
                                            <Column>
                                                <customData>
                                                    <core:CustomData key="fieldPath" value="OrderDate" />
                                                </customData>
                                                <Link text="{i18n>orderDateColumn}"
                                                    press=".onSortOrdersColumn" />
                                            </Column>
                                            <Column>
                                                <customData>
                                                    <core:CustomData key="fieldPath" value="ShippedDate" />
                                                </customData>
                                                <Link text="{i18n>shippedDateColumn}"
                                                    press=".onSortOrdersColumn" />
                                            </Column>
                                            <Column>
                                                <customData>
                                                    <core:CustomData key="fieldPath" value="Status" />
                                                </customData>
                                                <Link text="{i18n>statusColumn}"
                                                    press=".onSortOrdersColumn" />
                                            </Column>
                                        </columns>
                                        <items>
                                            <ColumnListItem
                                                type="Navigation"
                                                press=".onCustomerOrderPress">
                                                <cells>
                                                    <Text text="{customerOrders>OrderID}" />
                                                    <Text text="{i18n>orderTaskTypeValue}" />
                                                    <Text text="{customerOrders>CustomerID}" />
                                                    <Text text="{customerOrders>ShipCountry}" />
                                                    <Text
                                                        text="{path: 'customerOrders>OrderDate', formatter: '.formatDate'}" />
                                                    <Text
                                                        text="{
                                                    parts: ['customerOrders>ShippedDate', 'customerOrders>Status'],
                                                    formatter: '.formatShippedDate'
                                                }" />
                                                    <ObjectStatus
                                                        text="{customerOrders>Status}"
                                                        state="{path: 'customerOrders>Status', formatter: '.formatStatusState'}" />
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </ScrollContainer>
                            </VBox>
                        </f:content>
                    </f:Card>
                </VBox>

                <!-- Customer Invoices Card with Fixed Height -->
                <VBox renderType="Bare" class="sapUiLargeMarginTop">
                    <f:Card renderType="Bare" class="sapUiContentPadding responsiveCard">
                        <f:header>
                            <card:Header
                                title="{i18n>customerInvoicesTitle}"
                                subtitle="All invoices from this customer">
                            </card:Header>
                        </f:header>
                        <f:content>
                            <VBox width="100%">
                                <!-- Invoices Table -->
                                <ScrollContainer height="90%" vertical="true" horizontal="false">
                                    <Table
                                        id="customerInvoicesTable"
                                        items="{ path: 'odataModel>/Invoices' }"
                                        width="100%"
                                        showNoData="true"
                                        noDataText="No invoices available"
                                        mode="None"
                                        busyIndicatorDelay="0">
                                        <columns>
                                            <Column width="5em">
                                                <Text text="{i18n>orderIdColumn}" />
                                            </Column>
                                            <Column>
                                                <HBox alignItems="Center">
                                                    <Text text="{i18n>productNameColumn}" />
                                                    <core:Icon
                                                        src="sap-icon://sort"
                                                        press=".onSortProductName"
                                                        class="sapUiTinyMarginBegin sortIcon" />
                                                </HBox>
                                            </Column>
                                            <Column minScreenWidth="Small">
                                                <Text text="{i18n>customerColumn}" />
                                            </Column>
                                            <Column >
                                                <HBox alignItems="Center">
                                                    <Text text="{i18n>orderDateColumn}" />
                                                    <core:Icon
                                                        src="sap-icon://sort"
                                                        press=".onSortInvoiceOrderDate"
                                                        class="sapUiTinyMarginBegin sortIcon" />
                                                </HBox>
                                            </Column>
                                            <Column minScreenWidth="Small" demandPopin="true">
                                                <Text text="{i18n>statusColumn}" />
                                            </Column>
                                            <Column >
                                                <Text text="{i18n>priceColumn}" />
                                            </Column>
                                        </columns>
                                        <items>
                                            <ColumnListItem
                                                type="Navigation"
                                                press=".onCustomerInvoicePress">
                                                <cells>
                                                    <Text text="{odataModel>OrderID}" />
                                                    <Text text="{odataModel>ProductName}" />
                                                    <Text text="{odataModel>CustomerName}" />
                                                    <Text text="{path: 'odataModel>OrderDate', formatter: '.formatDate'}" />
                                                    <Text text="{i18n>activeStatusValue}" />
                                                    <Text text="{path: 'odataModel>ExtendedPrice', formatter: '.formatCurrency'}" />
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </ScrollContainer>
                            </VBox>
                        </f:content>
                    </f:Card>
                </VBox>

            </VBox>
        </f:content>
        <f:footer>
            <core:Fragment fragmentName="appiuimodule.views.Footer" type="XML" />
        </f:footer>
    </f:DynamicPage>
</mvc:View>