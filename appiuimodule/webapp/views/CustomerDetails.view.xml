<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:macros="sap.fe.macros"
    xmlns:html="http://www.w3.org/1999/xhtml"
    controllerName="appiuimodule.controllers.CustomerDetails">
    <Page
        id="CustomerDetails"
        title="{i18n>customerDetailsTitle}"
        showNavButton="true"
        navButtonPress=".onNavBack">
        <headerContent>
            <core:Fragment fragmentName="appiuimodule.views.HeaderButtons" type="XML" />
        </headerContent>
        <content class="sapUiResponsiveMargin">
            
            <!-- Customer Information Card -->
            <f:Card class="sapUiResponsiveMargin" width="auto">
                <f:header>
                    <card:Header 
                        title="{i18n>customerDetailsTitle}"
                        subtitle="{customerModel>/CompanyName}"
                        iconSrc="sap-icon://customer" />
                </f:header>
                <f:content>
                    <VBox class="sapUiMediumMargin">
                        <!-- Company Name as main title -->
                        <Title text="{customerModel>/CompanyName}" 
                               level="H2" 
                               class="sapUiMediumMarginBottom" />
                        
                        <!-- Three Column Layout -->
                        <HBox wrap="Wrap" justifyContent="SpaceBetween">
                            <!-- General Information Column -->
                            <VBox width="30%">
                                <Label text="{i18n>generalInformationLabel}" class="sapUiSmallMarginBottom" />
                                <VBox class="sapUiSmallMarginBottom sapUiMediumMarginStart">
                                    <Text text="{i18n>customerIdColumn}: {customerModel>/CustomerID}" />
                                    <Text text="{i18n>companyNameColumn}: {customerModel>/CompanyName}" />
                                </VBox>
                            </VBox>
                            
                            <!-- Contact Information Column -->
                            <VBox width="30%">
                                <Label text="{i18n>contactInformationLabel}" class="sapUiSmallMarginBottom" />
                                <VBox class="sapUiSmallMarginBottom sapUiMediumMarginStart">
                                    <Text text="{i18n>contactNameColumn}: {customerModel>/ContactName}" />
                                    <Text text="{i18n>contactTitleLabel}: {customerModel>/ContactTitle}" />
                                    <Text text="{i18n>phoneColumn}: {customerModel>/Phone}" />
                                    <Text text="{i18n>faxLabel}: {path: 'customerModel>/Fax', formatter: '.formatFax'}" />
                                </VBox>
                            </VBox>
                            
                            <!-- Address Column -->
                            <VBox width="30%">
                                <Label text="{i18n>addressLabel}" class="sapUiSmallMarginBottom" />
                                <VBox class="sapUiSmallMarginBottom sapUiMediumMarginStart">
                                    <Text text="{customerModel>/Address}" />
                                    <Text text="{customerModel>/City}, {path: 'customerModel>/Region', formatter: '.formatRegion'}" />
                                    <Text text="{customerModel>/PostalCode}" />
                                    <Text text="{customerModel>/Country}" />
                                </VBox>
                            </VBox>
                        </HBox>
                    </VBox>
                </f:content>
            </f:Card>

            <!-- Customer Orders Table -->
            <ScrollContainer height="400px" vertical="true" horizontal="false" class="sapUiResponsiveMargin">
                <Table
                    id="customerOrdersTable"
                    items="{ path: 'customerOrdersModel>/orders' }"
                    width="auto">
                    <headerToolbar>
                        <Toolbar>
                            <Title text="{i18n>customerOrdersTitle}" />
                        </Toolbar>
                    </headerToolbar>
                <columns>
                    <Column width="8em">
                        <Text text="{i18n>orderIdColumn}" />
                    </Column>
                    <Column width="10em">
                        <Text text="{i18n>orderDateColumn}" />
                    </Column>
                    <Column width="10em">
                        <Text text="{i18n>shippedDateColumn}" />
                    </Column>
                    <Column width="8em">
                        <Text text="{i18n>statusColumn}" />
                    </Column>
                    <Column width="8em">
                        <Text text="{i18n>countryColumn}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>cityColumn}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        type="Navigation"
                        press=".onCustomerOrderPress">
                        <cells>
                            <Text text="{customerOrdersModel>OrderID}" />
                            <Text text="{
                                parts: ['customerOrdersModel>OrderDate'],
                                formatter: '.formatDate'
                            }" />
                            <Text text="{
                                parts: ['customerOrdersModel>ShippedDate'],
                                formatter: '.formatDate'
                            }" />
                            <Text text="{customerOrdersModel>Status}" />
                            <Text text="{customerOrdersModel>ShipCountry}" />
                            <Text text="{customerOrdersModel>ShipCity}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
            </ScrollContainer>

            <!-- Customer Invoices Table -->
            <ScrollContainer height="400px" vertical="true" horizontal="false" class="sapUiResponsiveMargin">
                <Table
                    id="customerInvoicesTable"
                    items="{ path: 'customerInvoicesModel>/invoices' }"
                    width="auto">
                    <headerToolbar>
                        <Toolbar>
                            <Title text="{i18n>customerInvoicesTitle}" />
                        </Toolbar>
                    </headerToolbar>
                <columns>
                    <Column width="8em">
                        <Text text="{i18n>orderIdColumn}" />
                    </Column>
                    <Column width="12em">
                        <Text text="{i18n>productNameColumn}" />
                    </Column>
                    <Column width="6em">
                        <Text text="{i18n>quantityLabel}" />
                    </Column>
                    <Column width="8em">
                        <Text text="{i18n>unitPriceLabel}" />
                    </Column>
                    <Column width="8em">
                        <Text text="{i18n>extendedPriceLabel}" />
                    </Column>
                    <Column width="10em">
                        <Text text="{i18n>orderDateColumn}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        type="Navigation"
                        press=".onCustomerInvoicePress">
                        <cells>
                            <Text text="{customerInvoicesModel>OrderID}" />
                            <Text text="{customerInvoicesModel>ProductName}" />
                            <Text text="{customerInvoicesModel>Quantity}" />
                            <Text text="{
                                parts: ['customerInvoicesModel>UnitPrice'],
                                formatter: '.formatCurrency'
                            }" />
                            <Text text="{
                                parts: ['customerInvoicesModel>ExtendedPrice'],
                                formatter: '.formatCurrency'
                            }" />
                            <Text text="{
                                parts: ['customerInvoicesModel>OrderDate'],
                                formatter: '.formatDate'
                            }" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
            </ScrollContainer>

        </content>
        <footer>
            <core:Fragment fragmentName="appiuimodule.views.Footer" type="XML" />
        </footer>
    </Page>
</mvc:View>