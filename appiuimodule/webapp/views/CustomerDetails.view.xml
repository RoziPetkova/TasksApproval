<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:macros="sap.fe.macros"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:layout="sap.ui.layout"
    controllerName="appiuimodule.controllers.CustomerDetails">

    <f:DynamicPage
        id="CustomerDetailsDynamicPage">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <HBox>
                        <Button type="Transparent" icon="sap-icon://nav-back"
                            press=".onNavBack" />
                        <Title class="sapUiTinyMarginTop sapUiSmallMarginBegin"
                            text="{customerModel>/CompanyName}" />
                    </HBox>
                </f:heading>
                <f:expandedContent>
                    <Label class=" sapUiLargeMarginBegin" text="{customerModel>/CustomerID}" />
                </f:expandedContent>
                <f:snappedContent>
                    <Label class=" sapUiLargeMarginBegin" text="{customerModel>/CustomerID}" />
                </f:snappedContent>
                <f:actions>
                    <core:Fragment fragmentName="appiuimodule.views.HeaderButtons" type="XML" />
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader
                pinnable="true">
                <f:content>
                    <layout:HorizontalLayout allowWrapping="true" class="sapUiLargeMarginBegin">
                        <!-- General Information -->
                        <layout:VerticalLayout class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                            <Label text="{i18n>generalInformationLabel}"
                                class="sapUiTinyMarginBottom" />
                            <VBox>
                                <ObjectAttribute title="{i18n>customerIdColumn}"
                                    text="{customerModel>/CustomerID}" />
                                <ObjectAttribute title="{i18n>companyNameColumn}"
                                    text="{customerModel>/CompanyName}" />
                            </VBox>
                        </layout:VerticalLayout>

                        <!-- Contact Information -->
                        <layout:VerticalLayout class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                            <Label text="{i18n>contactInformationLabel}"
                                class="sapUiTinyMarginBottom" />
                            <VBox>
                                <ObjectAttribute title="{i18n>contactNameColumn}"
                                    text="{customerModel>/ContactName}" />
                                <ObjectAttribute title="{i18n>contactTitleLabel}"
                                    text="{customerModel>/ContactTitle}" />
                                <ObjectAttribute title="{i18n>phoneColumn}"
                                    text="{customerModel>/Phone}" />
                                <ObjectAttribute title="{i18n>faxLabel}"
                                    text="{path: 'customerModel>/Fax', formatter: '.formatFax'}" />
                            </VBox>
                        </layout:VerticalLayout>

                        <!-- Address Information -->
                        <layout:VerticalLayout class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                            <Label text="{i18n>addressLabel}" class="sapUiTinyMarginBottom" />
                            <VBox>
                                <ObjectAttribute title="Address" text="{customerModel>/Address}" />
                                <ObjectAttribute title="City"
                                    text="{customerModel>/City}, {path: 'customerModel>/Region', formatter: '.formatRegion'}" />
                                <ObjectAttribute title="Postal Code"
                                    text="{customerModel>/PostalCode}" />
                                <ObjectAttribute title="Country" text="{customerModel>/Country}" />
                            </VBox>
                        </layout:VerticalLayout>

                    </layout:HorizontalLayout>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox class="sapUiResponsiveMargin">
                <!-- Customer Orders Card with Fixed Height -->
                <VBox renderType="Bare">
                    <f:Card renderType="Bare" class="sapUiContentPadding responsiveCard">
                        <f:header>
                            <card:Header
                                title="{i18n>customerOrdersTitle}"
                                subtitle="All orders from this customer">
                            </card:Header>
                        </f:header>
                        <f:content>
                            <VBox width="100%">
                                <!-- Single Table with Programmatic Sticky Headers -->
                                <ScrollContainer height="90%" vertical="true" horizontal="false">
                                    <Table
                                        id="customerOrdersTable"
                                        items="{ path: 'customerOrdersModel>/orders' }"
                                        width="100%"
                                        showNoData="true"
                                        noDataText="No orders available"
                                        mode="None"
                                        busyIndicatorDelay="0">
                                        <columns>
                                            <Column
                                                minScreenWidth="Small"
                                                width="5em"
                                                demandPopin="true">
                                                <Text text="{i18n>orderIdColumn}" />
                                            </Column>
                                            <Column>
                                                <Text text="{i18n>taskTypeColumn}" />
                                            </Column>
                                            <Column demandPopin="true">
                                                <Text text="{i18n>customerIdColumn}" />
                                            </Column>
                                            <Column demandPopin="true" minScreenWidth="Small">
                                                <Text text="{i18n>countryColumn}" />
                                            </Column>
                                            <Column demandPopin="true" minScreenWidth="Small">
                                                <HBox alignItems="Center">
                                                    <Text text="{i18n>orderDateColumn}" />
                                                    <core:Icon
                                                        src="sap-icon://sort"
                                                        press=".onSortOrderDate"
                                                        class="sapUiTinyMarginBegin sortIcon" />
                                                </HBox>
                                            </Column>
                                            <Column minScreenWidth="Small">
                                                <Text text="{i18n>shippedDateColumn}" />
                                            </Column>
                                            <Column demandPopin="true" minScreenWidth="Small">
                                                <HBox alignItems="Center">
                                                    <Text text="{i18n>statusColumn}" />
                                                    <core:Icon
                                                        src="sap-icon://sort"
                                                        press=".onSortStatus"
                                                        class="sapUiTinyMarginBegin sortIcon" />
                                                </HBox>
                                            </Column>
                                        </columns>
                                        <items>
                                            <ColumnListItem
                                                type="Navigation"
                                                press=".onCustomerOrderPress">
                                                <cells>
                                                    <Text text="{customerOrdersModel>OrderID}" />
                                                    <Text text="Order" />
                                                    <Text text="{customerOrdersModel>CustomerID}" />
                                                    <Text text="{customerOrdersModel>ShipCountry}" />
                                                    <Text
                                                        text="{path: 'customerOrdersModel>OrderDate', formatter: '.formatDate'}" />
                                                    <Text
                                                        text="{
                                                    parts: ['customerOrdersModel>ShippedDate', 'customerOrdersModel>Status'],
                                                    formatter: '.formatShippedDate'
                                                }" />
                                                    <ObjectStatus
                                                        text="{customerOrdersModel>Status}"
                                                        state="{path: 'customerOrdersModel>Status', formatter: '.formatStatusState'}" />
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </ScrollContainer>
                            </VBox>
                        </f:content>
                    </f:Card>
                </VBox>

                <!-- Customer Invoices Card with Fixed Height -->
                <VBox renderType="Bare" class="sapUiLargeMarginTop">
                    <f:Card renderType="Bare" class="sapUiContentPadding responsiveCard">
                        <f:header>
                            <card:Header
                                title="{i18n>customerInvoicesTitle}"
                                subtitle="All invoices from this customer">
                            </card:Header>
                        </f:header>
                        <f:content>
                            <VBox width="100%">
                                <!-- Single Table with Programmatic Sticky Headers -->
                                <ScrollContainer height="90%" vertical="true" horizontal="false">
                                    <Table
                                        id="customerInvoicesTable"
                                        items="{ path: 'customerInvoicesModel>/invoices' }"
                                        width="100%"
                                        showNoData="true"
                                        noDataText="No invoices available"
                                        mode="None"
                                        busyIndicatorDelay="0">
                                        <columns>
                                            <Column
                                                minScreenWidth="Small"
                                                width="5em"
                                                demandPopin="true">
                                                <Text text="{i18n>orderIdColumn}" />
                                            </Column>
                                            <Column demandPopin="true">
                                                <HBox alignItems="Center">
                                                    <Text text="{i18n>productNameColumn}" />
                                                    <core:Icon
                                                        src="sap-icon://sort"
                                                        press=".onSortProductName"
                                                        class="sapUiTinyMarginBegin sortIcon" />
                                                </HBox>
                                            </Column>
                                            <Column demandPopin="true">
                                                <Text text="{i18n>customerColumn}" />
                                            </Column>
                                            <Column demandPopin="true" minScreenWidth="Small">
                                                <HBox alignItems="Center">
                                                    <Text text="{i18n>orderDateColumn}" />
                                                    <core:Icon
                                                        src="sap-icon://sort"
                                                        press=".onSortInvoiceOrderDate"
                                                        class="sapUiTinyMarginBegin sortIcon" />
                                                </HBox>
                                            </Column>
                                            <Column demandPopin="true" minScreenWidth="Small">
                                                <Text text="{i18n>statusColumn}" />
                                            </Column>
                                            <Column demandPopin="true" minScreenWidth="Small">
                                                <Text text="{i18n>priceColumn}" />
                                            </Column>
                                        </columns>
                                        <items>
                                            <ColumnListItem
                                                type="Navigation"
                                                press=".onCustomerInvoicePress">
                                                <cells>
                                                    <Text text="{customerInvoicesModel>OrderID}" />
                                                    <Text text="{customerInvoicesModel>ProductName}" />
                                                    <Text text="{customerInvoicesModel>CustomerName}" />
                                                    <Text text="{path: 'customerInvoicesModel>OrderDate', formatter: '.formatDate'}" />
                                                    <Text text="Active" />
                                                    <Text text="{customerInvoicesModel>ExtendedPrice}" />
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </ScrollContainer>
                            </VBox>
                        </f:content>
                    </f:Card>
                </VBox>

            </VBox>
        </f:content>
        <f:footer>
            <core:Fragment fragmentName="appiuimodule.views.Footer" type="XML" />
        </f:footer>
    </f:DynamicPage>
</mvc:View>