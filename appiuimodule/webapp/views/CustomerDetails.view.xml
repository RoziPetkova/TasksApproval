<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:macros="sap.fe.macros"
    xmlns:html="http://www.w3.org/1999/xhtml"
    controllerName="appiuimodule.controllers.CustomerDetails">
    <Page
        id="CustomerDetails"
        title="{i18n>customerDetailsTitle}"
        showNavButton="true"
        navButtonPress=".onNavBack">
        <customHeader>
            <core:Fragment fragmentName="appiuimodule.views.Header" type="XML" />
        </customHeader>
        <content class="sapUiSmallMarginBottom sapUiMediumMarginBegin sapUiMediumMarginEnd">
            
            <!-- Customer Details Table -->
            <Table
                id="customerTable"
                items="{ path: 'customerModel>/customerDetails' }"
                class="sapUiResponsiveMargin"
                width="auto">
                <headerToolbar>
                    <Toolbar>
                        <Title text="{i18n>customerDetailsTitle}" />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column width="8em">
                        <Text text="{i18n>fieldColumn}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>valueColumn}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{customerModel>label}" />
                            <Text text="{customerModel>value}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>

        </content>
        <footer>
            <core:Fragment fragmentName="appiuimodule.views.Footer" type="XML" />
        </footer>
    </Page>
</mvc:View>