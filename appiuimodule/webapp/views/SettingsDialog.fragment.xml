<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="settingsDialog"
        title="{i18n>Settings}"
        icon="sap-icon://settings"
        type="Message">
        <content>
            <VBox renderType="Bare" alignItems="Center">
                <Text
                    text="{i18n>settingsPlaceholderText}"
                    textAlign="Center"
                    width="100%" />
            </VBox>
        </content>
        <beginButton>
            <Button
                text="{i18n>cancelButton}"
                press=".onCloseDialog" />
        </beginButton>
        <endButton>
            <Button
                text="{i18n>saveButton}"
                type="Emphasized"
                press=".onSettingsSave" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>