<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="settingsDialog"
        title="Settings"
        icon="sap-icon://settings"
        class="sapUiResponsiveMargin">
        <content>
            <VBox class="sapUiResponsiveMargin" alignItems="Center">
                <Text
                    text="Some settings should be manipulated here... to be implemented."
                    textAlign="Center" />
            </VBox>
        </content>
        <beginButton>
            <Button
                text="Cancel"
                press=".onCloseDialog" />
        </beginButton>
        <endButton>
            <Button
                text="Save"
                type="Emphasized"
                press=".onSettingsSave" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>