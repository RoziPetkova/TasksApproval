<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:macros="sap.fe.macros"
    xmlns:html="http://www.w3.org/1999/xhtml"
    controllerName="appiuimodule.controllers.ReviewOrders">

    <f:DynamicPage
        id="ReviewOrdersDynamicPage">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <HBox>
                        <Button type="Transparent" icon="sap-icon://nav-back"
                            press=".onNavBack" />
                        <Title class="sapUiTinyMarginTop sapUiSmallMarginBegin"
                            text="{i18n>reviewOrdersTitle}" />
                    </HBox>
                </f:heading>
                <f:actions>
                    <core:Fragment fragmentName="appiuimodule.views.HeaderButtons" type="XML" />
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>
        <f:content>

            <!-- Orders Review Card with Larger Height -->
            <VBox class="sapUiResponsiveMargin sapUiLargeMarginTop" renderType="Bare">
                <f:Card height="35rem" class="sapUiContentPadding">
                    <f:header>
                        <card:Header
                            title="{i18n>reviewOrdersTitle}"
                            subtitle="{i18n>ordersSubtitle}">
                        </card:Header>
                    </f:header>
                    <f:content>
                        <VBox renderType="Bare">
                            <HBox renderType="Bare" width="100%">
                                <OverflowToolbar style="Clear" width="100%">
                                    <ToolbarSpacer visible="{= !${viewModel>/isMobile} }" />
                                    <SearchField
                                        placeholder="{i18n>searchOrdersPlaceholder}"
                                        search=".onFilterOrders"
                                        width="{= ${viewModel>/isMobile} ? '55%' : '40%' }" />
                                    <Select
                                        selectedKey="All"
                                        change=".onStatusFilterChange"
                                        class="sapUiTinyMarginBegin"
                                        width="{= ${viewModel>/isMobile} ? '44%' : '20%' }">
                                        <core:Item key="All" text="{i18n>allStatusFilter}" />
                                        <core:Item key="Pending"
                                            text="{i18n>pendingStatusFilter}" />
                                        <core:Item key="Shipped"
                                            text="{i18n>shippedStatusFilter}" />
                                    </Select>
                                </OverflowToolbar>
                            </HBox>

                            <VBox renderType="Bare" height="80%">
                                <!-- Single Table with Programmatic Sticky Headers -->
                                <ScrollContainer height="100%" vertical="true"
                                    horizontal="false">
                                    <Table
                                        id="reviewOrdersTable"
                                        items="{ path: 'orders>/' }"
                                        width="100%"
                                        showNoData="false"
                                        mode="None"
                                        busyIndicatorDelay="0">
                                        <columns>
                                            <Column width="5em">
                                                <customData>
                                                    <core:CustomData key="fieldPath" value="OrderID" />
                                                </customData>
                                                <Link text="{i18n>orderIdColumn}"
                                                    press=".onSortColumn" />
                                            </Column>
                                            <Column minScreenWidth="Small">
                                                <Text text="{i18n>taskTypeColumn}" />
                                            </Column>
                                            <Column demandPopin="true" minScreenWidth="Small">
                                                <customData>
                                                    <core:CustomData key="fieldPath" value="CustomerID" />
                                                </customData>
                                                <Link text="{i18n>customerIdColumn}"
                                                    press=".onSortColumn" />
                                            </Column>
                                            <Column demandPopin="true" minScreenWidth="Small">
                                                <customData>
                                                    <core:CustomData key="fieldPath" value="ShipCountry" />
                                                </customData>
                                                <Link text="{i18n>countryColumn}"
                                                    press=".onSortColumn" />
                                            </Column>
                                            <Column>
                                                <customData>
                                                    <core:CustomData key="fieldPath" value="OrderDate" />
                                                </customData>
                                                <Link text="{i18n>orderDateColumn}"
                                                    press=".onSortColumn" />
                                            </Column>
                                            <Column>
                                                <customData>
                                                    <core:CustomData key="fieldPath" value="ShippedDate" />
                                                </customData>
                                                <Link text="{i18n>shippedDateColumn}"
                                                    press=".onSortColumn" />
                                            </Column>
                                            <Column>
                                                <customData>
                                                    <core:CustomData key="fieldPath" value="Status" />
                                                </customData>
                                                <Link text="{i18n>statusColumn}"
                                                    press=".onSortColumn" />
                                            </Column>
                                        </columns>
                                        <items>
                                            <ColumnListItem
                                                type="Navigation"
                                                press=".onOrderPress">
                                                <cells>
                                                    <Text text="{orders>OrderID}" />
                                                    <Text text="{i18n>orderTaskTypeValue}" />
                                                    <Text text="{orders>CustomerID}" />
                                                    <Text text="{orders>ShipCountry}" />
                                                    <Text
                                                        text="{path: 'orders>OrderDate', formatter: '.formatDate'}" />
                                                    <Text
                                                        text="{
                                                    parts: ['orders>ShippedDate', 'orders>Status'],
                                                    formatter: '.formatShippedDate'
                                                }" />
                                                    <ObjectStatus
                                                        text="{orders>Status}"
                                                        state="{path: 'orders>Status', formatter: '.formatStatusState'}" />
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </ScrollContainer>
                            </VBox>
                        </VBox>
                    </f:content>
                </f:Card>
            </VBox>

        </f:content>
        <f:footer>
            <core:Fragment fragmentName="appiuimodule.views.Footer" type="XML" />
        </f:footer>
    </f:DynamicPage>
</mvc:View>