<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="declineDialog"
        title="{i18n>taskDecisionDialogTitle}"
        icon="sap-icon://reset">
        <content>
            <VBox renderType="Bare" alignItems="Center">
                <items>
                    <TextArea
                        id="rejectionReasonInput"
                        placeholder="{i18n>rejectionReasonPlaceholder}"
                        rows="5"
                        width="95%"
                        growing="true"
                        growingMaxLines="7" />
                </items>
            </VBox>
        </content>
        <beginButton>
            <Button
                text="{i18n>cancelButton}"
                press=".onCloseDialog" />
        </beginButton>
        <endButton>
            <Button
                text="{i18n>Decline}"
                type="Emphasized"
                press=".onDeclineConfirm" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>