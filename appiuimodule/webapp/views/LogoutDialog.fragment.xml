<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="logoutDialog"
        title="{i18n>logoutTitle}"
        icon="sap-icon://log">
        <content>
            <VBox alignItems="Center">
                <Text
                    text="{i18n>logoutConfirmationMessage}"
                    textAlign="Center"
                    width="100%" />
            </VBox>
        </content>
        <beginButton>
            <Button
                text="Cancel"
                press=".onCloseDialog" />
        </beginButton>
        <endButton>
            <Button
                text="Log Out"
                type="Emphasized"
                press=".onLogoutConfirm" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>