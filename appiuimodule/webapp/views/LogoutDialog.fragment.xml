<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="logoutDialog"
        title="{i18n>logoutTitle}"
        icon="sap-icon://log"
        type="Message">
        <content>
            <VBox renderType="Bare" alignItems="Center">
                <Text
                    text="{i18n>logoutConfirmationMessage}"
                    textAlign="Center"
                    width="100%" />
            </VBox> 
        </content>
        <beginButton>
            <Button
                text="{i18n>cancelButton}"
                press=".onCloseDialog" />
        </beginButton>
        <endButton>
            <Button
                text="{i18n>LogOut}"
                type="Emphasized"
                press=".onLogoutConfirm" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>