<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="approveDialog"
        title="{i18n>taskDecisionDialogTitle}"
        icon="sap-icon://message-success"
        type="Message">
        <content>
            <VBox alignItems="Center">
                <items>
                    <Text
                        text="{i18n>confirmApprovalText}"
                        textAlign="Center"
                        width="100%" />
                </items>
            </VBox>
        </content>
        <beginButton>
            <Button
                text="{i18n>cancelButton}"
                press=".onCloseDialog" />
        </beginButton>
        <endButton>
            <Button
                text="{i18n>Approve}"
                type="Emphasized"
                press=".onApproveConfirm" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>