<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:macros="sap.fe.macros"
    xmlns:html="http://www.w3.org/1999/xhtml"
    controllerName="appiuimodule.controllers.ReviewCustomers">

    <f:DynamicPage
        id="ReviewCustomersDynamicPage">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <HBox>
                        <Button type="Transparent" icon="sap-icon://nav-back"
                            press=".onNavBack" />
                        <Title class="sapUiTinyMarginTop sapUiSmallMarginBegin"
                            text="{i18n>reviewCustomersTitle}" />
                    </HBox>
                </f:heading>
                <f:actions>
                    <core:Fragment fragmentName="appiuimodule.views.HeaderButtons" type="XML" />
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>
        <f:content>

            <!-- Customers Review Card -->
            <VBox class="sapUiResponsiveMargin sapUiLargeMarginTop" renderType="Bare">
                <f:Card height="35rem" class="sapUiContentPadding">
                    <f:header>
                        <card:Header
                            title="{i18n>reviewCustomersTitle}"
                            subtitle="{i18n>customersSubtitle}">
                        </card:Header>
                    </f:header>
                    <f:content>
                        <VBox renderType="Bare" width="100%">
                            <VBox renderType="Bare" width="100%">
                                <Toolbar style="Clear" width="100%">
                                    <ToolbarSpacer visible="{= !${viewModel>/isMobile} }" />
                                    <SearchField
                                        width="{= ${viewModel>/isMobile} ? '100%' : '50%' }"
                                        placeholder="{i18n>searchCustomersPlaceholder}"
                                        search=".onFilterCustomers" />
                                </Toolbar>
                            </VBox>

                            <VBox height="85%" renderType="Bare">
                                <ScrollContainer height="100%" vertical="true"
                                    horizontal="false">
                                    <Table
                                        id="reviewCustomersTable"
                                        items="{
                                            path: 'odataModel>/Customers',
                                            parameters: {
                                                $top: 20,
                                                operationMode: 'Server'
                                            }
                                        }"
                                        width="100%"
                                        showNoData="false"
                                        mode="None"
                                        busyIndicatorDelay="0"
                                        growing="true"
                                        growingThreshold="20"
                                        growingTriggerText="{i18n>loadMoreButton}">
                                        <columns>
                                            <Column width="7em">
                                                <customData>
                                                    <core:CustomData key="fieldPath" value="CustomerID" />
                                                </customData>
                                                <Link text="{i18n>customerIdColumn}"
                                                    press=".onSortColumn" />
                                            </Column>
                                            <Column>
                                                <customData>
                                                    <core:CustomData key="fieldPath" value="CompanyName" />
                                                </customData>
                                                <Link text="{i18n>companyNameColumn}"
                                                    press=".onSortColumn" />
                                            </Column>
                                            <Column>
                                                <customData>
                                                    <core:CustomData key="fieldPath" value="ContactName" />
                                                </customData>
                                                <Link text="{i18n>contactNameColumn}"
                                                    press=".onSortColumn" />
                                            </Column>
                                            <Column minScreenWidth="Small" demandPopin="true">
                                                <customData>
                                                    <core:CustomData key="fieldPath" value="Country" />
                                                </customData>
                                                <Link text="{i18n>countryColumn}"
                                                    press=".onSortColumn" />
                                            </Column>
                                        </columns>
                                        <items>
                                            <ColumnListItem
                                                type="Navigation"
                                                press=".onCustomerPress">
                                                <cells>
                                                    <Text text="{odataModel>CustomerID}" />
                                                    <Text text="{odataModel>CompanyName}" />
                                                    <Text text="{odataModel>ContactName}" />
                                                    <Text text="{odataModel>Country}" />
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </ScrollContainer>
                            </VBox>
                        </VBox>
                    </f:content>
                </f:Card>
            </VBox>

        </f:content>
        <f:footer>
            <core:Fragment fragmentName="appiuimodule.views.Footer" type="XML" />
        </f:footer>
    </f:DynamicPage>
</mvc:View>